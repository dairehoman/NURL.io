{% extends 'base.html.twig' %}

{% block pageTitle %}login{% endblock %}

{% block body %}

<h1>Login</h1>

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path('login') }}" method="post">

    <input type="hidden" name="_csrf_token"
           autocomplete="off" value="{{ csrf_token('authenticate') }}"
    >

    <p>
        <label for="username">Username:</label>
        <input type="text" id="username" name="_username" autocomplete="off"  value="{{ last_username }}" />

    <p>
        <label for="password">Password:</label>
        <input type="password" id="password" autocomplete="off" name="_password" />

    <p>
        <button type="submit">login</button>
</form>

{% endblock %}