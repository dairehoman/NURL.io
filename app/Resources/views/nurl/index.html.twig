{% extends 'base.html.twig' %}

{% block body %}
    <h1>Nurls list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Link</th>
                <th>Source</th>
                <th>Created</th>
                <th>Lastedited</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for nurl in nurls %}
            <tr>
                <td><a href="{{ path('nurl_show', { 'id': nurl.id }) }}">{{ nurl.id }}</a></td>
                <td>{{ nurl.title }}</td>
                <td>{{ nurl.link }}</td>
                <td>{{ nurl.source }}</td>
                <td>{% if nurl.created %}{{ nurl.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if nurl.lastEdited %}{{ nurl.lastEdited|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('nurl_show', { 'id': nurl.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('nurl_edit', { 'id': nurl.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('nurl_new') }}">Create a new nurl</a>
        </li>
    </ul>
{% endblock %}
