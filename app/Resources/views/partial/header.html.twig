{% block header %}
    {#---------------HTML------------------#}
    <div class="left_header">
        <a href="{{ path('home') }}"><h2 class="site_title">Nurl.io</h2></a>
    </div>
    <hr>

    <nav class="main_nav">
        <hr>
    </nav>
    <div class="right_header">
        {% if app.user %}
            <a  class="log" href="{{ path('logout') }}">Logout</a>
        {% else %}
            <a class="log" href="{{ path('login') }}">Login</a>
        {% endif %}
    </div>
    <hr>
    {#---------------HTML------------------#}

    {#---------------CSS-------------------#}
    <style>
        .main_nav {
            padding-top: 2rem;
        }
        .site_title {
            position:absolute;
            top:-15px;
        }

        .left_header {
            position:absolute;
            left:10px;
        }

        .right_header {
            position:absolute;
            right:10px;
        }

        .log {
            position:absolute;
            top:-60px;
            right:10px;
        }

    </style>
    {#---------------CSS-------------------#}
{% endblock %}