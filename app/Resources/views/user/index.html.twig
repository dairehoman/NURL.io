{% extends 'base.html.twig' %}

{% block body %}
    <h1>Users list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Password</th>
                <th>Role</th>
                <th>Profilepic</th>
                <th>Numnurlscreated</th>
                <th>Numnotescreated</th>
                <th>Datemembersince</th>
                <th>Bio</th>
                <th>College</th>
                <th>Company</th>
                <th>Interests</th>
                <th>Isprivate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.username }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.role }}</td>
                <td>{{ user.profilePic }}</td>
                <td>{{ user.numNurlsCreated }}</td>
                <td>{{ user.numNotesCreated }}</td>
                <td>{% if user.dateMemberSince %}{{ user.dateMemberSince|date('Y-m-d') }}{% endif %}</td>
                <td>{{ user.bio }}</td>
                <td>{{ user.college }}</td>
                <td>{{ user.company }}</td>
                <td>{{ user.interests }}</td>
                <td>{% if user.isPrivate %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('user_show', { 'id': user.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('user_edit', { 'id': user.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('user_new') }}">Create a new user</a>
        </li>
    </ul>
{% endblock %}
