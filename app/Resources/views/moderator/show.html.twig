{% extends 'base.html.twig' %}

{% block body %}
    <h1>Moderator</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ moderator.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ moderator.username }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ moderator.password }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ moderator.role }}</td>
            </tr>
            <tr>
                <th>Profilepic</th>
                <td>{{ moderator.profilePic }}</td>
            </tr>
            <tr>
                <th>Numnurlscreated</th>
                <td>{{ moderator.numNurlsCreated }}</td>
            </tr>
            <tr>
                <th>Numnotescreated</th>
                <td>{{ moderator.numNotesCreated }}</td>
            </tr>
            <tr>
                <th>Datemembersince</th>
                <td>{% if moderator.dateMemberSince %}{{ moderator.dateMemberSince|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Bio</th>
                <td>{{ moderator.bio }}</td>
            </tr>
            <tr>
                <th>College</th>
                <td>{{ moderator.college }}</td>
            </tr>
            <tr>
                <th>Company</th>
                <td>{{ moderator.company }}</td>
            </tr>
            <tr>
                <th>Interests</th>
                <td>{{ moderator.interests }}</td>
            </tr>
            <tr>
                <th>Isprivate</th>
                <td>{% if moderator.isPrivate %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('moderator_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('moderator_edit', { 'id': moderator.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
