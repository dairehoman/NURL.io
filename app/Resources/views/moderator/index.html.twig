{% extends 'base.html.twig' %}

{% block body %}
    <h1>Moderators list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Password</th>
                <th>Role</th>
                <th>Profilepic</th>
                <th>Numnurlscreated</th>
                <th>Numnotescreated</th>
                <th>Datemembersince</th>
                <th>Bio</th>
                <th>College</th>
                <th>Company</th>
                <th>Interests</th>
                <th>Isprivate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for moderator in moderators %}
            <tr>
                <td><a href="{{ path('moderator_show', { 'id': moderator.id }) }}">{{ moderator.id }}</a></td>
                <td>{{ moderator.username }}</td>
                <td>{{ moderator.password }}</td>
                <td>{{ moderator.role }}</td>
                <td>{{ moderator.profilePic }}</td>
                <td>{{ moderator.numNurlsCreated }}</td>
                <td>{{ moderator.numNotesCreated }}</td>
                <td>{% if moderator.dateMemberSince %}{{ moderator.dateMemberSince|date('Y-m-d') }}{% endif %}</td>
                <td>{{ moderator.bio }}</td>
                <td>{{ moderator.college }}</td>
                <td>{{ moderator.company }}</td>
                <td>{{ moderator.interests }}</td>
                <td>{% if moderator.isPrivate %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('moderator_show', { 'id': moderator.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('moderator_edit', { 'id': moderator.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('moderator_new') }}">Create a new moderator</a>
        </li>
    </ul>
{% endblock %}
