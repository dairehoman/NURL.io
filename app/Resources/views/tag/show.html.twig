{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tag</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tag.id }}</td>
            </tr>
            <tr>
                <th>Tagvalue</th>
                <td>{{ tag.tagvalue }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tag_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('tag_edit', { 'id': tag.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(tag_upvote) }}
            <input type="submit" value="Upvote this Tag! :-)">
            {{ form_end(tag_upvote) }}
        </li>

        <li>
            {{ form_start(tag_downvote) }}
            <input type="submit" value="Downvote this Tag! :-(">
            {{ form_end(tag_downvote) }}
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
